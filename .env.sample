# Database Configuration
# Format: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://dbuser:dbpassword@localhost:5432/education_website
DB_NAME=education_website
DB_USER=dbuser
DB_PASSWORD=your_secure_password

# Server Configuration
DEBUG=False
# Generate a secure secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here
DOMAIN_NAME=alphaonelabs.com
APP_PORT=8000

# Payment Processing (Stripe)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_connect_...

# Email Service (SendGrid)
# Get this from your SendGrid account settings
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_PASSWORD=your-sendgrid-password
EMAIL_FROM=admin@example.com

# Monitoring
# Get this from your Slack workspace: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# VPS Configuration (Only needed for deployment)
VPS_IP=your.server.ip.address
VPS_USER=your_server_username
VPS_PASSWORD=your_server_password

# Project Configuration
PROJECT_NAME=education-website
PYTHON_VERSION=3.10

# Admin Configuration
ADMIN_URL=a-dmin-url123

# Google Cloud Storage Configuration
GS_BUCKET_NAME=your-bucket-name
GS_PROJECT_ID=your-project-id
SERVICE_ACCOUNT_FILE=your-service-account-file-path
